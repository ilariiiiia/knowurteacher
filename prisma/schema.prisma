datasource db {
  provider = "postgresql"
  url      = env("POSTGREDB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Teacher {
  id       String   @id @default(uuid())
  name     String
  school   String?
  photoURL String?
  Reviews  Review[]

  @@unique([name, school])
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  username String   @unique
  school   String?
  photoURL String?
  Reviews  Review[]
}

model Review {
  id              String  @id @default(uuid())
  author          User    @relation(fields: [authorID], references: [id])
  authorID        String
  teacher         Teacher @relation(fields: [teacherID], references: [id])
  teacherID       String
  strictness      Int
  punctuality     Int
  precision       Int
  communication   Int
  engagement      Int
  feedbackQuality Int
  flexibility     Int

  @@unique([authorID, teacherID])
}
